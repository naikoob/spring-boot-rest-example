<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <id>nexus-releases</id>
            <username>admin</username>
            <password>admin123</password>
        </server>

        <server>
            <id>nexus-snapshots</id>
            <username>admin</username>
            <password>admin123</password>
        </server>

        <server>
            <id>https://github.com</id>
            <username>${GITHUB_USERNAME}</username>
            <password>${GITHUB_PASSWORD}</password>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <id>corp_repo</id>
            <mirrorOf>*</mirrorOf>
            <name>Corporation repo</name>
            <url>http://nexus.cicd.svc:8081/repository/maven-public/</url>
        </mirror>
    </mirrors>

    <profiles>
        <profile>
            <id>default-profile</id>

            <repositories>
                <repository>
                    <id>nexus-release</id>
                    <name>Repository for releases</name>
                    <url>http://nexus.cicd.svc:8081/repository/maven-releases/</url>
                    <layout>default</layout>
                    <snapshotPolicy>always</snapshotPolicy>
                </repository>
                <snapshotRepository>
                    <id>nexus</id>
                    <name>Snapshots</name>
                    <url>http://nexus.cicd.svc:8081/repository/maven-snapshots</url>
                </snapshotRepository>
            </repositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>default-profile</activeProfile>
    </activeProfiles>

</settings>